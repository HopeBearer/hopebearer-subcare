// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  refreshToken String?  @db.Text
  
  // User settings
  currency      String  @default("CNY")
  monthlyBudget Decimal @default(0) @db.Decimal(10, 2)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  subscriptions Subscription[]
  notifications Notification[]
  paymentRecords PaymentRecord[]
  categories    Category[]

  @@map("users")
}

model Subscription {
  id          String   @id @default(uuid())
  name        String
  normalizedName String @default("") // Normalized name for duplicate detection (lowercase, trimmed)
  price       Decimal  @db.Decimal(10, 2)
  currency    String   @default("CNY")
  billingCycle String  // monthly, yearly, weekly, daily
  startDate   DateTime
  nextPayment DateTime?
  status      String   @default("ACTIVE") // ACTIVE, CANCELLED, PAUSED
  
  // Category relation
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  // Keep old string for backward compatibility if needed, or migration strategy. 
  // Ideally this would be deprecated. Using @map to keep column name if needed but for new logic:
  categoryName    String   @default("Other") @map("category") // Remapped old column to avoid conflict if we want to keep data, or we can just drop it. Let's keep it as `categoryName` but map to `category` column to preserve data if user doesn't migrate column. 
  // Wait, if I change the model field `category` to `categoryName`, existing code might break.
  // The user asked to "extract Category model".
  // Let's keep `category` string for now to avoid breaking too much frontend code immediately, 
  // but add `categoryId` for the new relation.
  // Actually, let's just add `categoryId` and `category` relation. 
  // The existing `category` string field will remain as legacy/fallback.

  icon        String?  // Optional icon identifier or url
  description String?  @db.Text
  
  // New fields from frontend requirements
  paymentMethod      String?
  autoRenewal        Boolean  @default(true)
  enableNotification Boolean  @default(false)
  notifyDaysBefore   Int?
  website            String?
  notes              String?  @db.Text
  usage              String   @default("Normally")

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  paymentRecords PaymentRecord[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([categoryId])
  @@index([userId, normalizedName])
  @@map("subscriptions")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  icon        String?
  color       String?  @default("#94a3b8")
  budgetLimit Decimal? @db.Decimal(10, 2)
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])

  subscriptions Subscription[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@map("categories")
}

model PaymentRecord {
  id              String   @id @default(uuid())
  
  amount          Decimal  @db.Decimal(10, 2)
  currency        String
  exchangeRate    Decimal? @db.Decimal(10, 4)
  
  billingDate     DateTime
  periodStart     DateTime?
  periodEnd       DateTime?
  
  status          String   @default("PAID") // PAID, PENDING, FAILED, REFUNDED
  note            String?  @db.Text

  subscriptionId  String
  subscription    Subscription @relation(fields: [subscriptionId], references: [id])

  userId          String
  user            User     @relation(fields: [userId], references: [id])

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId, billingDate])
  @@index([subscriptionId])
  @@map("payment_records")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String   @db.Text
  type      String   // system / billing / security / marketing
  isRead    Boolean  @default(false)

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("notifications")
}

model SystemLog {
  id        String   @id @default(uuid())

  level     String   // DEBUG | INFO | WARN | ERROR | AUDIT
  domain    String   // AUTH | API | EMAIL | NOTIFICATION | PAYMENT | SYSTEM
  action    String   // login | send_email | create_subscription

  userId    String?
  ip        String?
  requestId String?

  metadata  Json?
  error     String?  @db.Text

  createdAt DateTime @default(now())

  @@index([domain])
  @@index([level])
  @@index([userId])
  @@map("system_logs")
}

model MessageTemplate {
  id       String @id @default(uuid())

  key      String @unique  // reset-password / subscription-expire
  title    String
  content  String @db.Text  // HTML or Markdown
  channel  String          // email / in-app

  @@map("message_templates")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique // Hashed token
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}
